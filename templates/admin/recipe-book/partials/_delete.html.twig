{% set path = 'admin_recipe_book_' ~ entity ~ '_delete' %}
<form class="d-inline-block" method="post" action="{{ path( path, {'id': id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer \'\'{{name}}\'\'?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ id) }}">
    <button class="btn btn-white text-danger"><i class="fa-solid fa-trash"></i></button>
</form>
