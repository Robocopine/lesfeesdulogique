{% extends 'admin/base.html.twig' %}

{% block title %}{{ parent() }}Recette{% endblock %}

{% block body %}
<div class="d-inline-block position-absolute end-0">
    <a class=" btn btn-primary mx-4 mt-4" href="{{ path('admin_recipe_book_recipe_edit', {'id': recipe.id}) }}">Modifier</a>
</div>
<h1 class="mt-4 h2">{{recipe.nameFr}}</h1>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('admin_index') }}">Tableau de bord</a></li>
        <li class="breadcrumb-item"><a href="{{ path('admin_recipe_book_recipe_index') }}">Recettes</a></li>
        <li class="breadcrumb-item active" aria-current="page">{{recipe.nameFr}}</li>
    </ol>
</nav>

<div class="card mb-4">
    <div class="card-header pb-2">
        <ul class="nav nav-pills card-header-pills">
            <li class="nav-item">
                <div class="nav-link text-dark"><i class="fa-regular fa-file-lines"></i>&nbsp; Fiche technique : <b>{{recipe.nameFr}}</b></div>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('admin_recipe_book_recipe_show', {'id': recipe.id, 'lg' : 'fr'}) }}">Français</a> 
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('admin_recipe_book_recipe_show', {'id': recipe.id, 'lg' : 'nl'}) }}">Néerlandais</a> 
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('admin_recipe_book_recipe_show', {'id': recipe.id, 'lg' : 'en'}) }}">Anglais</a> 
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('admin_recipe_book_recipe_show', {'id': recipe.id, 'lg' : 'de'}) }}">Allemand</a> 
            </li>
        </ul>
    </div>

    <table class="card-body table table-bordered mb-0">
        <tbody>
            <tr>
                <td>Photo</td>
                <td>
                    <p class="fw-bold">Ingredients</p>
                    {% for ingredient in recipe.ingredient %}
                        <p>- &emsp; {{ingredient.quantity}} &nbsp; {{ingredient.substance.nameFr}}</p>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    {{ lg == 'nl' ? recipe.descriptionNl : lg == 'en' ? recipe.descriptionEn : lg == 'de' ? recipe.descriptionDe : recipe.descriptionFr }}
                </td>
            </tr>
        </tbody>
    </table>
  
</div>

<a href="{{ path('admin_recipe_book_recipe_index') }}">Retour aux recettes</a>


{% endblock %}
