{% block _recipe_ingredients_widget %}
    {{ form_widget(form) }}

    <input type="hidden" id="widgets-counter" value="0">

    <div class="form-group mt-4">
        <button type="button" id="add-ingredient" class="btn btn-primary">
            <i class="fas fa-plus"></i>
            Ajouter un ingr√©dient
        </button>
    </div>
{% endblock %}

{% block _recipe_ingredients_entry_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block _recipe_ingredients_entry_widget %}

    <div class="form-group" id="block_{{id}}">
    {{ form_errors(form) }}
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div class="col">
                        <span class="text-muted">{{ form_label(form.quantity) }}</span>
                        {{ form_widget(form.quantity) }}
                        {{ form_errors(form.quantity) }}
                    </div>
                    <div class="col">
                        <span class="text-muted">{{ form_label(form.substance) }}</span>
                        {{ form_widget(form.substance) }}
                        {{ form_errors(form.substance) }}
                    </div>
                </div>
            </div>
             <div class="col-2 mt-4 pt-2">
                <button type="button" data-action="delete" data-target="#block_{{id}}" class="btn btn-danger">X</button>
            </div>
        </div>
    </div>
{% endblock %}

