{% extends 'admin/base.html.twig' %}

{% block title %}{{ parent() }}Les composants{% endblock %}

{% block body %}
<div class="d-inline-block position-absolute end-0">
    <a class=" btn btn-primary mx-4 mt-4" href="{{ path('admin_recipe_book_substance_new') }}">Nouveau</a>
</div>
<h1 class="mt-4 h2">Composants</h1>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="{{ path('admin_index') }}">Tableau de bord</a></li>
    <li class="breadcrumb-item active" aria-current="page">Composants</li>
  </ol>
</nav>

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Les composants de nos recettes
    </div>
    
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for substance in pagination.data %}
                <tr>
                    <td>{{ substance.id }}</td>
                    <td>{{ substance.nameFr }}</td>
                    <td>
                        <a href="{{ path('admin_recipe_book_substance_show', {'id': substance.id}) }}" class="btn btn-white text-dark"><i class="fa-solid fa-eye"></i></a>
                        <a href="{{ path('admin_recipe_book_substance_edit', {'id': substance.id}) }}" class="btn btn-white text-primary"><i class="fa-solid fa-pen-to-square"></i></a>
                        {{ include('admin/recipe-book/substance/_delete_form.html.twig', {'id': substance.id}) }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucun composant</td>
                </tr>
            {% endfor %}
        </tbody>

    </table>
    <div class="mx-4">{{ pagination.display() }}</div>
    
</div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
{% endblock %}
